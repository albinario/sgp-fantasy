{
	"jsxSingleQuote": true,
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"prettier.trailingComma": "none",
	"useTabs": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^react$",
		"^react-(.*)$",
		"^next",
		"^next/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^@/utils/(.*)$",
		"^@/lib/(.*)$",
		"^@/components/(.*)$",
		"^@/ui/(.*)$",
		"^@/hooks/(.*)$",
		"^@/theme/(.*)$",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderCaseInsensitive": true
}
